.container {
  position: relative;
  padding: 30rpx;
}
.mode-container {
  display: flex;
  align-items: center;
}
.mode-container text {
  margin: 0 10rpx;
}
.record-btn {
  border-radius: 50%;
  height: 200rpx;
  width: 200rpx;
  line-height: 200rpx;
  background-color: #33CCCC;
  color: #fff;
  position: fixed;
  bottom: 30rpx;
  left: 50%;
  transform: translate(-50%, 0);
}
.hover {
  background-color: #339999;
  color: #fff;
}

.props-title {
  font-size: 40rpx;
  font-weight: 700;
}

textarea {
  border: 1px solid #ddd;
  padding: 10rpx;
  width: calc(100% - 22rpx);
  margin: 10rpx 0;
}